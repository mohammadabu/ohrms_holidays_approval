<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_refuse_comment" model="ir.ui.view">
        <field name="name">create.refuse.comment.wizard</field>
        <field name="model">create.refuse.comment</field>
        <field name="arch" type="xml">
            <form string="Comment">
                <group class="oe_title">
                    <field name="comment"/>
                </group>
                <footer>
                    <button name="create_refuse_comment" string="Submit" type="object" class="btn-primary"/>
                    <button name="cancel_refuse_comment" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>